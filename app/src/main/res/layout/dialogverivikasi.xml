<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Verifikasi Sudah Dikirim Ke Email Kamu"
            android:textSize="17sp"
            android:layout_gravity="center"/>

        <TextView
            android:hint="ViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblemailDaftar"
            android:textSize="17sp"
            android:layout_gravity="center"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:minWidth="121dp"
                android:layout_height="wrap_content"
                android:hint="Kode Verifikasi"
                android:id="@+id/txtVerifikasi"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">
            <Button style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:id="@+id/btnInputVerifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifikasi"
                android:textSize="15sp"/>
            <Button style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:id="@+id/btnInputBatalVerifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batal"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
