<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jk_todayIcon"
        app:srcCompat="@drawable/ic_today_white_18px"/>
    <xyz.aufa.asistenkuliahku.CustomWidget.TextViewLatoFontMedium
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hari"
        android:layout_toRightOf="@id/jk_todayIcon"
        android:textSize="18sp"
        android:id="@+id/harijklist"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/listJk"
        android:layout_below="@+id/harijklist"
        android:scrollbars="none">
    </ListView>

</RelativeLayout>
